configure

########################################
# System Identity / Base Services
########################################

set system host-name 'IXP-T1-EQIX-3'
set system domain-name 'cdx.lab'
set system time-zone 'Australia/Sydney'

set service ntp server '46.244.164.88'
set service ssh port '2022'

########################################
# Interfaces
# eth0: Management
########################################

# eth0: Management (DHCP from lab management network)
set interfaces ethernet eth0 description 'Management'
set interfaces ethernet eth0 address 'dhcp'

# eth1: Tier-1 Regional Gateway – Sydney (Multiple Regional / ISP Peering Blocks)
set interfaces ethernet eth1 description 'Tier 1 Regional Gateway - Sydney'
set interfaces ethernet eth1 address '54.252.0.19/15'
set interfaces ethernet eth1 address '13.54.0.8/15'
set interfaces ethernet eth1 address '57.71.80.73/20'
set interfaces ethernet eth1 address '57.71.16.25/20'
set interfaces ethernet eth1 address '14.203.128.94/18'
set interfaces ethernet eth1 address '47.72.0.46/16'
set interfaces ethernet eth1 address '49.156.48.83/22'
set interfaces ethernet eth1 address '1.128.0.111/18'
set interfaces ethernet eth1 address '36.88.0.179/13'
set interfaces ethernet eth1 address '27.32.86.64/23'
set interfaces ethernet eth1 address '1.136.0.95/18'
set interfaces ethernet eth1 address '49.197.150.80/23'
set interfaces ethernet eth1 address '45.119.100.122/22'
set interfaces ethernet eth1 address '49.226.76.97/23'
set interfaces ethernet eth1 address '49.225.30.32/23'
set interfaces ethernet eth1 address '58.174.176.201/20'
set interfaces ethernet eth1 address '42.241.172.49/22'
set interfaces ethernet eth1 address '43.251.64.65/22'
set interfaces ethernet eth1 address '41.109.117.194/24'
set interfaces ethernet eth1 address '27.108.32.39/21'
set interfaces ethernet eth1 address '37.18.138.44/24'

# eth2: Upstream to Tier-0
set interfaces ethernet eth2 description 'to TIER 0'
set interfaces ethernet eth2 address '45.127.172.17/28'

########################################
# Static Routing
########################################
# (None – Tier-1 router participates in OSPF only)
########################################

########################################
# OSPF – Tier-1 Regional IXP (Sydney)
# - Area 0: Link to Tier-0
# - Area 3: All Sydney Regional Peering Blocks
# - Router-ID based on primary Sydney address
########################################

# Router-ID for this Tier-1 IXP
set protocols ospf parameters router-id '54.252.0.19'

# Tier-0 transit network (Area 0)
set protocols ospf area 0 network '45.127.172.16/28'

# Sydney regional peering networks (Area 3)
set protocols ospf area 3 network '54.252.0.0/15'
set protocols ospf area 3 network '13.54.0.0/15'
set protocols ospf area 3 network '57.71.80.0/20'
set protocols ospf area 3 network '57.71.16.0/20'
set protocols ospf area 3 network '14.203.128.0/18'
set protocols ospf area 3 network '47.72.0.0/16'
set protocols ospf area 3 network '49.156.48.0/22'
set protocols ospf area 3 network '1.128.0.0/18'
set protocols ospf area 3 network '36.88.0.0/13'
set protocols ospf area 3 network '27.32.86.0/23'
set protocols ospf area 3 network '1.136.0.0/18'
set protocols ospf area 3 network '49.197.150.0/23'
set protocols ospf area 3 network '45.119.100.0/22'
set protocols ospf area 3 network '49.226.76.0/23'
set protocols ospf area 3 network '49.225.30.0/23'
set protocols ospf area 3 network '58.174.176.0/20'
set protocols ospf area 3 network '42.241.172.0/22'
set protocols ospf area 3 network '43.251.64.0/22'
set protocols ospf area 3 network '41.109.117.0/24'
set protocols ospf area 3 network '27.108.32.0/21'
set protocols ospf area 3 network '37.18.138.0/24'

########################################
# NAT
# (None – Tier-1 regional gateway is purely routed)
########################################
# (Intentionally no "set nat ..." statements)

commit
save
exit
