configure

########################################
# System Identity / Base Services
########################################

set system host-name 'IXP-T1-EQIX-7'
set system domain-name 'cdx.lab'
set system time-zone 'Asia/Vladivostok'

set service ntp server '46.244.164.88'
set service ssh port '2022'

########################################
# Interfaces
# eth0: Management
########################################

# eth0 – Management (DHCP from lab management network)
set interfaces ethernet eth0 description 'Management'
set interfaces ethernet eth0 address 'dhcp'

# eth1 – Tier-1 Regional Gateway (Vladivostok)
set interfaces ethernet eth1 description 'Tier 1 Regional Gateway - Vladivostok'
set interfaces ethernet eth1 address '5.100.64.87/18'
set interfaces ethernet eth1 address '46.3.0.172/16'
set interfaces ethernet eth1 address '46.96.0.157/16'
set interfaces ethernet eth1 address '37.212.0.73/14'
set interfaces ethernet eth1 address '46.131.64.197/18'
set interfaces ethernet eth1 address '37.153.0.105/18'
set interfaces ethernet eth1 address '46.196.128.101/18'
set interfaces ethernet eth1 address '5.177.0.19/17'
set interfaces ethernet eth1 address '46.213.54.142/23'
set interfaces ethernet eth1 address '57.88.64.73/20'
set interfaces ethernet eth1 address '31.192.240.61/20'
set interfaces ethernet eth1 address '57.92.0.9/20'
set interfaces ethernet eth1 address '62.192.128.43/18'
set interfaces ethernet eth1 address '39.56.0.148/17'
set interfaces ethernet eth1 address '5.76.32.19/20'
set interfaces ethernet eth1 address '39.44.0.60/16'
set interfaces ethernet eth1 address '2.179.128.37/19'
set interfaces ethernet eth1 address '5.161.0.85/16'
set interfaces ethernet eth1 address '31.193.64.137/20'
set interfaces ethernet eth1 address '46.240.128.124/17'
set interfaces ethernet eth1 address '37.151.16.227/21'

# eth2 – Upstream to Tier-0
set interfaces ethernet eth2 description 'to TIER 0'
set interfaces ethernet eth2 address '193.232.136.37/28'

########################################
# Static Routing
########################################
# (None – Tier-1 router participates in OSPF only)
########################################

########################################
# OSPF – Tier-1 Regional IXP (Vladivostok)
# - Area 0: Link to Tier-0
# - Area 7: Vladivostok Regional Peering Blocks
# - Router-ID sourced from primary Vladivostok address
########################################

# Router-ID for this Tier-1 IXP
set protocols ospf parameters router-id '5.100.64.87'

# Tier-0 transit network (Area 0)
set protocols ospf area 0 network '193.232.136.32/28'

# Vladivostok regional peering networks (Area 7)
set protocols ospf area 7 network '5.100.64.0/18'
set protocols ospf area 7 network '46.3.0.0/16'
set protocols ospf area 7 network '46.96.0.0/16'
set protocols ospf area 7 network '37.212.0.0/14'
set protocols ospf area 7 network '46.131.64.0/18'
set protocols ospf area 7 network '37.153.0.0/18'
set protocols ospf area 7 network '46.196.128.0/18'
set protocols ospf area 7 network '5.177.0.0/17'
set protocols ospf area 7 network '46.213.54.0/23'
set protocols ospf area 7 network '57.88.64.0/20'
set protocols ospf area 7 network '31.192.240.0/20'
set protocols ospf area 7 network '57.92.0.0/20'
set protocols ospf area 7 network '62.192.128.0/18'
set protocols ospf area 7 network '39.56.0.0/17'
set protocols ospf area 7 network '5.76.32.0/20'
set protocols ospf area 7 network '39.44.0.0/16'
set protocols ospf area 7 network '2.179.128.0/19'
set protocols ospf area 7 network '5.161.0.0/16'
set protocols ospf area 7 network '31.193.64.0/20'
set protocols ospf area 7 network '46.240.128.0/17'
set protocols ospf area 7 network '37.151.16.0/21'

########################################
# NAT
# (None – Tier-1 regional gateway is purely routed)
########################################
# (Intentionally no NAT configuration)

commit
save
exit
