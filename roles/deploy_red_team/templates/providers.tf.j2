terraform {
  required_version = ">= 1.0"
  required_providers {
    proxmox = {
      source  = "bpg/proxmox"
      version = "{{ terraform_proxmox_provider_version }}"
    }
  }
}

provider "proxmox" {
  endpoint  = "https://{{ proxmox_api_host }}:{{ proxmox_api_port }}/"
  api_token = "{{ proxmox_api_user }}!{{ proxmox_api_token_id }}={{ proxmox_api_token_secret }}"
  insecure  = {{ 'true' if not (proxmox_validate_certs | bool) else 'false' }}
}
